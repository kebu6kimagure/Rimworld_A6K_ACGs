<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- =========================== -->
  <!-- A6k Hat                     -->
  <!-- =========================== -->
  <RecipeDef>
    <defName>A6k_Make_Apparel_Hat</defName>
    <label>make A6k Hat</label>
    <description>Sew an A6k-themed hat from fabric or leather.</description>
    <jobString>Making A6k Hat.</jobString>
    <workAmount>85</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <skillRequirements><Crafting>4</Crafting></skillRequirements>
    <researchPrerequisite>ComplexClothing</researchPrerequisite>
    <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    <recipeUsers>
      <li>HandTailoringBench</li>
      <li>ElectricTailoringBench</li>
    </recipeUsers>

    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Textiles</li>
          </categories>
        </filter>
        <count>50</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Textiles</li>
      </categories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>Textiles</li>
      </categories>
      <disallowedThingDefs>
        <li>Gold</li>
        <li>Silver</li>
        <li>Steel</li>
        <li>Plasteel</li>
        <li>Uranium</li>
      </disallowedThingDefs>
    </defaultIngredientFilter>

    <products>
      <A6k_Apparel_Hat>1</A6k_Apparel_Hat>
    </products>
  </RecipeDef>

