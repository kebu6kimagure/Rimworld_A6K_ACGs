<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="ApparelBase">
    <defName>A6k_Apparel_HatPlus</defName>
    <label>A6k Hat Plus</label>
    <description>A high-tech cosmetic hat with enhanced protection. Features randomized variants.</description>
    <graphicData>
      <texPath>apparel/a6kheadgear/a6khatplusicon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>400</MaxHitPoints>
      <WorkToMake>600</WorkToMake>
      <Mass>1.2</Mass>
      <MarketValue>1200</MarketValue>
      <StuffEffectMultiplierArmor>1.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.8</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.6</StuffEffectMultiplierInsulation_Heat>
      <ArmorRating_Sharp>1.27</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.54</ArmorRating_Blunt>
      <ArmorRating_Heat>0.65</ArmorRating_Heat>
      <Insulation_Cold>5</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>apparel/a6kheadgear/a6khatplusicon</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>A6k_AdvancedHeadgear</li>
        <li>Noble</li>
        <li>HighNoble</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="Verse.ColorGenerator_Single">
      <color>RGBA(1.000, 1.000, 1.000, 1.000)</color>
    </colorGenerator>
    <equippedStatOffsets>
      <VacuumResistance>0.75</VacuumResistance>
      <SocialImpact>1</SocialImpact>
    </equippedStatOffsets>
    <techLevel>Spacer</techLevel>
    <generateAllowChance>0.5</generateAllowChance>
    <smeltable>false</smeltable>
    <comps>
      <li Class="A6k_CompVariant.CompProperties_VariantApparel">
        <variantType>Hat</variantType>
      </li>
    </comps>
    <!-- 配方相关定义 -->

    <tradeTags>
      <li>Armor</li>
    </tradeTags>
    <thingCategories>
      <li>ArmorHeadgear</li>
    </thingCategories>

  </ThingDef>
</Defs>
